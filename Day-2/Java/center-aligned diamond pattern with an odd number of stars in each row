package Day2com.leetcode.tasks;

import java.util.Scanner;

public class task6 {

	public static void main(String[] args) {
	/*output:
	 * Enter the number of rows: 5
        * 
      * * * 
    * * * * * 
  * * * * * * * 
* * * * * * * * * 
  * * * * * * * 
    * * * * * 
      * * * 
        * 
	 */
		Scanner sc = new Scanner(System.in);

        System.out.print("Enter the number of rows: ");
        int n = sc.nextInt();  

        
        for (int i = 1; i <= n; i++) {
           
            for (int j = i; j < n; j++) {
                System.out.print("  ");
            }

          
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("* ");
            }

            System.out.println();
        }

       
        for (int i = n - 1; i >= 1; i--) {
          
            for (int j = n; j > i; j--) {
                System.out.print("  "); 
            }

           
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("* ");
            }

            System.out.println();
        }

        sc.close();
    }

	}


